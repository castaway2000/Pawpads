<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="activity"
            type="saberapplications.pawpads.ui.AboutActivity" />

        <variable
            name="version"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:orientation="vertical">

        <saberapplications.pawpads.views.FontTextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="start|center_vertical"
            android:text="@string/app_name"
            android:textSize="40sp"
            app:typefaceAsset="Bellota_BoldItalic.otf" />

        <saberapplications.pawpads.views.FontTextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{version}"
            android:textColor="#64ffffff"
            android:textSize="20sp"
            app:typefaceAsset="Proxima_Nova_Regular.otf" />

        <saberapplications.pawpads.views.FontTextView
            android:id="@+id/lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Lead Project Manager:\n Blazecollie"
            android:textColor="@color/accent"
            android:textSize="18sp"
            app:typefaceAsset="Proxima_Nova_Regular.otf"
            android:layout_marginTop="40dp"
            />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tvBlazeFA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:clickable="true"
                android:src="@drawable/fa_logo" />

            <ImageView
                android:id="@+id/tvBlazeTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/twitter_square_logo" />
        </LinearLayout>

        <saberapplications.pawpads.views.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Icon design: Riverbreak"
            android:textColor="@color/accent"
            android:textSize="18sp"
            app:typefaceAsset="Proxima_Nova_Regular.otf"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:layout_marginTop="20dp"
            android:id="@+id/iconDesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/fa_logo" />


        <saberapplications.pawpads.views.FontButton
            android:layout_marginTop="60dp"
            android:id="@+id/feedback"
            style="@style/transparent_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="@{ () -> activity.sendFeedback()}"
            android:text="@string/send_feedback" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            >
            <saberapplications.pawpads.views.FontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#64ffffff"
                android:text="@string/copyright"
                android:textSize="16sp"
                app:typefaceAsset="Proxima_Nova_Regular.otf"
                />

            <saberapplications.pawpads.views.FontTextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Privacy Policy"
                android:textSize="16sp"
                app:typefaceAsset="Proxima_Nova_Regular.otf"
                />

        </LinearLayout>
    </LinearLayout>


</layout>