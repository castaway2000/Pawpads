<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#97159cc6"
              android:orientation="vertical"
              android:weightSum="1">

	<ScrollView
		android:id="@+id/scrollView"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<TextView
				android:id="@+id/textView6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="DISTANCE SETTINGS"
				android:textAppearance="?android:attr/textAppearanceLarge"
				android:textStyle="bold"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="310dp"
				android:orientation="vertical">

				<RadioGroup
					android:layout_width="wrap_content"
					android:layout_height="wrap_content">

					<RadioButton
						android:id="@+id/rbKM"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:checked="false"
						android:text="Kilometers"/>

					<RadioButton
						android:id="@+id/rbMI"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:checked="false"
						android:text="Miles"/>
				</RadioGroup>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="72dp">

					<TextView
						android:id="@+id/tvRange"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="5dp"
						android:paddingTop="20dp"
						android:text="Range:"
						android:textAppearance="?android:attr/textAppearanceLarge"/>

					<EditText
						android:id="@+id/etRange"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_toEndOf="@+id/tvRange"
						android:layout_toRightOf="@+id/tvRange"
						android:ems="10"
						android:inputType="number"/>
				</RelativeLayout>

				<RadioGroup
					android:id="@+id/rgGpsSettings"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="left"
					android:layout_marginTop="10dp">

					<TextView
						android:id="@+id/textView9"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="GPS Accuracy"
						android:textAppearance="?android:attr/textAppearanceMedium"/>

					<RadioButton
						android:id="@+id/rbHigh"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:checked="true"
						android:text="High"/>

					<RadioButton
						android:id="@+id/rbMedium"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Medum"/>

					<RadioButton
						android:id="@+id/rbLow"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:checked="false"
						android:text="Low"/>

				</RadioGroup>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="98dp"
				android:orientation="vertical">

				<TextView
					android:id="@+id/NotificationSetting"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="NOTIFICATION SETTINGS"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold"/>

				<CheckBox
					android:id="@+id/ckPushNotifications"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
					android:enabled="true"
					android:text="Toggle Push Notifications"/>

				<CheckBox
					android:id="@+id/ckImNotification"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:checked="false"
					android:enabled="true"
					android:text="Toggle Messaging Popups"/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="0.25"
				android:orientation="vertical"
				android:weightSum="1">

				<TextView
					android:id="@+id/textView8"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:text="ACCOUNT SETTINGS"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textStyle="bold"/>

				<TextView
					android:id="@+id/tvRemoveProfile"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="5dp"
					android:paddingTop="20dp"
					android:text="Permenently Delete Profile"
					android:textAppearance="?android:attr/textAppearanceMedium"/>

				<FrameLayout
					android:layout_width="fill_parent"
					android:layout_height="125dp">

					<Button
						android:id="@+id/btRmProfile"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="5dp"
						android:text="Delete account"/>

					<Button
						android:id="@+id/btProfSave"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal|bottom"
						android:text="Save"/>

				</FrameLayout>

			</LinearLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/app_version"
				android:layout_gravity="center"/>
		</LinearLayout>
	</ScrollView>

</LinearLayout>