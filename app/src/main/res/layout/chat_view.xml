<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97159cc6"
    android:clickable="true"
    android:id="@+id/rChatLayout">

    <!--suppress AndroidDomInspection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hi"
        android:id="@+id/textView_left_chat"
        android:padding="2dp"
        android:gravity="left"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />
    <!--suppress AndroidDomInspection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hi"
        android:padding="2dp"
        android:id="@+id/textView_right_chat"
        android:visibility="visible"
        android:gravity="center_vertical|left"

        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/CVtime_right"
        android:layout_below="@+id/textView_right_chat"
        android:layout_alignRight="@+id/textView_right_chat"
        android:layout_alignEnd="@+id/textView_right_chat"
        android:gravity="bottom|right" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/CVtime_left"
        android:layout_alignRight="@+id/CVtime_right"
        android:layout_alignEnd="@+id/CVtime_right"
        android:gravity="bottom|right"
        android:layout_below="@+id/textView_left_chat"
        android:layout_alignLeft="@+id/textView_left_chat"
        android:layout_alignStart="@+id/textView_left_chat" />


</RelativeLayout>
