<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                                      android:id="@+id/rChatLayout"
                                      xmlns:android="http://schemas.android.com/apk/res/android"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:background="#97159cc6"
                                      android:clickable="true"
                                      app:orientation="vertical"
                                      app:columnCount="1"
	>

	<!--suppress AndroidDomInspection -->
	<TextView
		android:id="@+id/textView_left_chat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="28dp"
		android:layout_marginStart="28dp"
		android:gravity="left"
		android:padding="2dp"
		android:text="Message left"
		android:textAppearance="?android:attr/textAppearanceMedium"/>
	<!--suppress AndroidDomInspection -->
	<TextView
		android:id="@+id/textView_right_chat"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="28dp"
		android:layout_marginRight="28dp"
		app:layout_gravity="right"
		android:gravity="right"
		android:padding="2dp"
		android:text="Message text right"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:visibility="visible"/>

	<TextView
		android:id="@+id/CVtime_right"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignEnd="@+id/textView_right_chat"
		android:layout_alignRight="@+id/textView_right_chat"
		android:layout_below="@+id/textView_right_chat"
		android:gravity="bottom|right"
		android:text="10:00 01 jan 1980"
		android:textSize="10sp"/>

	<TextView
		android:id="@+id/CVtime_left"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignEnd="@+id/CVtime_right"
		android:layout_alignLeft="@+id/textView_left_chat"
		android:layout_alignRight="@+id/CVtime_right"
		android:layout_alignStart="@+id/textView_left_chat"
		android:layout_below="@+id/textView_left_chat"
		android:gravity="bottom|right"
		android:text="10:00 01 jan 1980"
		android:textSize="10sp"/>

	<TextView
		android:id="@+id/attachment"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_gravity="center"
		android:textColor="#0000ff"
	    android:textSize="20sp"
		/>

</android.support.v7.widget.GridLayout>
