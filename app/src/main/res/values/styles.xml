<resources>

    <declare-styleable name="FontText">
        <attr name="typefaceAsset" format="string" />
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="login_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/login_bg</item>
        <item name="android:textColor">#393939</item>
        <item name="android:textColorHint">#454545</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="typefaceAsset">Proxima_Nova_Regular.otf</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="transparent_button">
        <item name="android:background">@drawable/transparent_button_bg</item>
        <item name="android:gravity">center</item>
        <item name="typefaceAsset">Proxima_Nova_Semibold.otf</item>
        <item name="android:textColor">#88ffffff</item>
    </style>

    <style name="hint_text">
        <item name="android:textColor">#88ffffff</item>
        <item name="typefaceAsset">Proxima_Nova_Regular.otf</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
