<resources>

    <declare-styleable name="FontText">
        <attr name="typefaceAsset" format="string" />
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/accent</item>
        <item name="android:screenOrientation">portrait</item>
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/primary</item>

        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:windowBackground">@color/accent</item>
        <item name="android:alertDialogTheme">@style/AppAlertDialogTheme</item>
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="android:textColorHighlight">#cccccc</item>
    </style>

    <style name="AppAlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/title</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlNormal">@color/primary</item>
    </style>

    <style name="login_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/login_bg</item>
        <item name="android:textColor">#393939</item>
        <item name="android:textColorHint">#454545</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="typefaceAsset">Proxima_Nova_Regular.otf</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="forgot_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/gray_rect</item>
        <item name="android:textColor">#393939</item>
        <item name="android:textColorHint">#393939</item>
        <item name="android:textSize">20sp</item>
        <item name="typefaceAsset">Proxima_Nova_Regular.otf"</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="transparent_button">
        <item name="android:background">@drawable/transparent_button</item>
        <item name="android:gravity">center</item>
        <item name="typefaceAsset">Proxima_Nova_Semibold.otf</item>
        <item name="android:textColor">#88ffffff</item>
    </style>

    <style name="hint_text">
        <item name="android:textColor">#88ffffff</item>
        <item name="typefaceAsset">Proxima_Nova_Regular.otf</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="list_title">
        <item name="android:textColor">#393939</item>
        <item name="android:textSize">19sp</item>
        <item name="typefaceAsset">Proxima_Nova_Semibold.otf</item>
    </style>

    <style name="list_details">
        <item name="android:textColor">#44393939</item>
        <item name="android:textSize">14sp</item>
        <item name="typefaceAsset">Proxima_Nova_Regular.otf</item>
    </style>

    <style name="navigation_item">
        <item name="typefaceAsset">Proxima_Nova_Regular.otf</item>
        <item name="android:textColor">#354548</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="profile_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#28A7BB</item>
        <item name="android:drawableRight">@drawable/pencil_icon</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="typefaceAsset">Proxima_Nova_Regular.otf</item>
    </style>

    <style name="group_edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#28A7BB</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="typefaceAsset">Proxima_Nova_Regular.otf</item>
    </style>

    <style name="preferences_title">
        <item name="typefaceAsset">Proxima_Nova_Semibold.otf</item>
        <item name="android:textColor">#393939</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style name="preferences_subtitle">
        <item name="typefaceAsset">Proxima_Nova_Semibold.otf</item>
        <item name="android:textColor">#393939</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="settings_edit_text" parent="profile_edit_text">
        <item name="android:layout_marginTop">0dp</item>
    </style>
</resources>
